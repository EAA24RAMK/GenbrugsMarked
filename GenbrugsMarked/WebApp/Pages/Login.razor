@page "/login"
@using WebApp.Services
@inject UserService UserService
@inject NavigationManager NavManager
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<h3>Login</h3>

<div class="page-background">
    <div class="card-box">
        <h2 class="main-heading">GenbrugsMarked</h2>
        <p class="sub-heading">Erhvervsakademi Aarhus</p>
        <input @bind="email" placeholder="Email" class="secondary-button"/> <p></p>
        <input @bind="password" placeholder="Password" type="password" class="secondary-button"/><p></p>
        <button @onclick="LoginUser" class="primary-button">Log ind</button>
        <hr>
        Har du ikke en konto?
        <p></p>
        <button @onclick="RegisterUser" class="secondary-button">Opret bruger</button>
        
    </div>
</div>

<p>@message</p>

@code {
    private string email = "";
    private string password = "";
    private string message = "";

    private async Task LoginUser()
    {
        var user = await UserService.LoginAsync(email, password);
        if (user != null)
        {
            message = $"Velkommen, {user.Name}!";
            await LocalStorage.SetItemAsync("loggedInUser", user); // Gem bruger i localstorage
            NavManager.NavigateTo("/market"); //Redirect til market
        }
        else
        {
            message = "Forkert email eller kodeord.";
        }
    }

    private async Task RegisterUser()
    {
        NavManager.NavigateTo("/register");
    }
}